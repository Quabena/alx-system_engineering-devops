#!/usr/bin/env bash
# A script that displays "To infinity and beyond" indefinitely and responds to SIGTERM.

# Function to handle SIGTERM
handle_sigterm() {
    echo "I am invincible!!!"
    exit 0
}

# Trap SIGTERM signal
trap 'handle_sigterm' SIGTERM

# Infinite loop to display the message
while true; do
    echo "To infinity and beyond"
    sleep 2
done
